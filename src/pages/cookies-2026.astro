---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Cookies 2026 - ${SITE_TITLE}`} description="Cookie sale information and resources for 2026" />
	</head>
	<body>
		<Header />
		<main>
			<div class="cookies-content">
				<h1>Cookies 2026</h1>
				<p class="intro">Welcome to my cookie sale page! Here you'll find all the information about my cookie sales.</p>

				<section class="links-section">
					<ul>
						<li><a href="https://digitalcookie.girlscouts.org/scout/winifred83871">Click here to order your Girl Scout Cookies!</a></li>
					</ul>
				</section>

				<section class="media-section">
					<h2>Photos & Videos</h2>
					<div class="media-grid">
						<!-- Add your photos and videos here -->
						<div class="media-placeholder">
							<p>Media coming soon!</p>
						</div>
					</div>
				</section>
			</div>
		</main>
		<Footer />
	</body>
</html>
<style>
	.cookies-content {
		max-width: 900px;
		margin: 0 auto;
		padding: 2rem;
	}

	h1 {
		font-size: 2.5rem;
		margin-bottom: 1rem;
		color: rgb(var(--black));
	}

	.intro {
		font-size: 1.2rem;
		margin-bottom: 2rem;
		color: rgb(var(--gray-dark));
	}

	section {
		margin: 3rem 0;
	}

	h2 {
		font-size: 1.8rem;
		margin-bottom: 1rem;
		color: rgb(var(--black));
	}

	.links-section ul {
		list-style: none;
		padding: 0;
	}

	.links-section li {
		margin: 1rem 0;
		padding: 1rem;
		background: white;
		border-radius: 8px;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}

	.links-section a {
		color: var(--forest-green);
		text-decoration: none;
		font-size: 1.1rem;
		font-weight: 600;
	}

	.links-section a:hover {
		color: var(--girl-scout-green);
		text-decoration: underline;
	}

	.media-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
		gap: 1rem;
	}

	.media-placeholder {
		background: var(--star-green);
		border: 3px solid var(--forest-green);
		border-radius: 10px;
		padding: 3rem;
		text-align: center;
		color: var(--forest-green);
		min-height: 200px;
		display: flex;
		align-items: center;
		justify-content: center;
		font-weight: bold;
	}
</style>
