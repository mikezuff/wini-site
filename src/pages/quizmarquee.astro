---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="2026 Girl Scout Cookie Sales Quiz Show" description="Welcome to the Cookie Quiz Show!" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Archivo+Black&display=swap" rel="stylesheet">
	</head>
	<body>
		<Header />
		<main>
			<div class="show-card">
				<!-- Starburst background effect -->
				<div class="starburst"></div>

				<!-- Marquee light container -->
				<div class="marquee-frame">
					<!-- Corner decorations -->
					<div class="corner corner-tl"></div>
					<div class="corner corner-tr"></div>
					<div class="corner corner-bl"></div>
					<div class="corner corner-br"></div>

					<!-- Chasing lights -->
					<div class="light light-1"></div>
					<div class="light light-2"></div>
					<div class="light light-3"></div>
					<div class="light light-4"></div>
					<div class="light light-5"></div>
					<div class="light light-6"></div>
					<div class="light light-7"></div>
					<div class="light light-8"></div>
					<div class="light light-9"></div>
					<div class="light light-10"></div>
					<div class="light light-11"></div>
					<div class="light light-12"></div>
					<div class="light light-13"></div>
					<div class="light light-14"></div>
					<div class="light light-15"></div>
					<div class="light light-16"></div>
					<div class="light light-17"></div>
					<div class="light light-18"></div>
					<div class="light light-19"></div>
					<div class="light light-20"></div>
					<div class="light light-21"></div>
					<div class="light light-22"></div>
					<div class="light light-23"></div>
					<div class="light light-24"></div>
					<div class="light light-25"></div>
					<div class="light light-26"></div>
					<div class="light light-27"></div>
					<div class="light light-28"></div>
					<div class="light light-29"></div>
					<div class="light light-30"></div>
					<div class="light light-31"></div>
					<div class="light light-32"></div>
					<div class="light light-33"></div>
					<div class="light light-34"></div>
					<div class="light light-35"></div>
					<div class="light light-36"></div>

					<!-- Content -->
					<div class="content-area">
						<div class="year-vertical">2026</div>

						<div class="main-content">
							<div class="top-text">
								<span class="girl-scout">GIRL SCOUT</span>
								<span class="cookie-sales">COOKIE SALES</span>
							</div>

							<div class="quiz-show">
								<span class="quiz">QUIZ</span>
								<span class="show">SHOW</span>
							</div>
						</div>
					</div>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		display: flex;
		align-items: center;
		justify-content: center;
		min-height: 70vh;
		padding: 4rem 1rem;
		transform: rotate(0deg) !important;
		border-radius: 0 !important;
	}

	/* Override global styles to ensure perfect alignment */
	:global(h1), :global(h2), :global(h3), :global(h4), :global(h5), :global(h6) {
		transform: rotate(0deg) !important;
	}

	.show-card {
		position: relative;
		width: 100%;
		max-width: 900px;
		margin: 0 auto;
	}

	.starburst {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		width: 120%;
		height: 120%;
		background:
			conic-gradient(
				from 0deg at 50% 50%,
				#FFD700 0deg,
				#FF8C00 30deg,
				#FFD700 60deg,
				#FF4500 90deg,
				#FFD700 120deg,
				#FF8C00 150deg,
				#FFD700 180deg,
				#FF4500 210deg,
				#FFD700 240deg,
				#FF8C00 270deg,
				#FFD700 300deg,
				#FF4500 330deg,
				#FFD700 360deg
			);
		opacity: 0.15;
		animation: rotate-starburst 20s linear infinite;
		z-index: 0;
		border-radius: 50%;
		filter: blur(20px);
	}

	@keyframes rotate-starburst {
		from { transform: translate(-50%, -50%) rotate(0deg); }
		to { transform: translate(-50%, -50%) rotate(360deg); }
	}

	.marquee-frame {
		position: relative;
		background: linear-gradient(135deg, #8B0000 0%, #DC143C 50%, #8B0000 100%);
		padding: 3rem;
		border-radius: 15px;
		box-shadow:
			0 20px 60px rgba(0, 0, 0, 0.5),
			inset 0 0 40px rgba(255, 215, 0, 0.3);
		z-index: 1;
	}

	/* Corner decorations */
	.corner {
		position: absolute;
		width: 40px;
		height: 40px;
		background: linear-gradient(135deg, #FFD700, #FFA500);
		border: 4px solid #FF4500;
		z-index: 5;
	}

	.corner-tl {
		top: -5px;
		left: -5px;
		border-radius: 8px 0 8px 0;
		box-shadow: 0 0 20px #FFD700;
	}

	.corner-tr {
		top: -5px;
		right: -5px;
		border-radius: 0 8px 0 8px;
		box-shadow: 0 0 20px #FFD700;
	}

	.corner-bl {
		bottom: -5px;
		left: -5px;
		border-radius: 0 8px 0 8px;
		box-shadow: 0 0 20px #FFD700;
	}

	.corner-br {
		bottom: -5px;
		right: -5px;
		border-radius: 8px 0 8px 0;
		box-shadow: 0 0 20px #FFD700;
	}

	/* Chasing marquee lights */
	.light {
		position: absolute;
		width: 20px;
		height: 20px;
		border-radius: 50%;
		background: radial-gradient(circle, #FFFF00, #FFD700);
		box-shadow:
			0 0 10px #FFD700,
			0 0 20px #FFD700,
			0 0 30px #FF8C00;
		animation: chase-light 1.5s ease-in-out infinite;
	}

	/* Top lights */
	.light-1 { top: 10px; left: 5%; animation-delay: 0s; }
	.light-2 { top: 10px; left: 10%; animation-delay: 0.1s; }
	.light-3 { top: 10px; left: 17%; animation-delay: 0.2s; }
	.light-4 { top: 10px; left: 24%; animation-delay: 0.3s; }
	.light-5 { top: 10px; left: 31%; animation-delay: 0.4s; }
	.light-6 { top: 10px; left: 38%; animation-delay: 0.5s; }
	.light-7 { top: 10px; left: 45%; animation-delay: 0.6s; }
	.light-8 { top: 10px; left: 52%; animation-delay: 0.7s; }
	.light-9 { top: 10px; left: 59%; animation-delay: 0.8s; }
	.light-10 { top: 10px; left: 66%; animation-delay: 0.9s; }
	.light-11 { top: 10px; left: 73%; animation-delay: 1.0s; }
	.light-12 { top: 10px; left: 80%; animation-delay: 1.1s; }
	.light-13 { top: 10px; left: 87%; animation-delay: 1.2s; }
	.light-14 { top: 10px; right: 5%; animation-delay: 1.3s; }

	/* Right lights */
	.light-15 { right: 10px; top: 15%; animation-delay: 1.4s; }
	.light-16 { right: 10px; top: 30%; animation-delay: 1.5s; }
	.light-17 { right: 10px; top: 45%; animation-delay: 1.6s; }
	.light-18 { right: 10px; top: 60%; animation-delay: 1.7s; }
	.light-19 { right: 10px; top: 75%; animation-delay: 1.8s; }
	.light-20 { right: 10px; bottom: 10%; animation-delay: 1.9s; }

	/* Bottom lights */
	.light-21 { bottom: 10px; right: 5%; animation-delay: 2.0s; }
	.light-22 { bottom: 10px; right: 12%; animation-delay: 2.1s; }
	.light-23 { bottom: 10px; right: 19%; animation-delay: 2.2s; }
	.light-24 { bottom: 10px; right: 26%; animation-delay: 2.3s; }
	.light-25 { bottom: 10px; right: 33%; animation-delay: 2.4s; }
	.light-26 { bottom: 10px; left: 33%; animation-delay: 2.5s; }
	.light-27 { bottom: 10px; left: 26%; animation-delay: 2.6s; }
	.light-28 { bottom: 10px; left: 19%; animation-delay: 2.7s; }
	.light-29 { bottom: 10px; left: 12%; animation-delay: 2.8s; }
	.light-30 { bottom: 10px; left: 5%; animation-delay: 2.9s; }

	/* Left lights */
	.light-31 { left: 10px; bottom: 10%; animation-delay: 3.0s; }
	.light-32 { left: 10px; bottom: 25%; animation-delay: 3.1s; }
	.light-33 { left: 10px; top: 50%; animation-delay: 3.2s; }
	.light-34 { left: 10px; top: 35%; animation-delay: 3.3s; }
	.light-35 { left: 10px; top: 20%; animation-delay: 3.4s; }
	.light-36 { left: 10px; top: 10%; animation-delay: 3.5s; }

	@keyframes chase-light {
		0%, 100% {
			opacity: 0.3;
			transform: scale(0.8);
			background: radial-gradient(circle, #666, #444);
			box-shadow: 0 0 5px rgba(0,0,0,0.5);
		}
		50% {
			opacity: 1;
			transform: scale(1.2);
			background: radial-gradient(circle, #FFFF00, #FFD700);
			box-shadow:
				0 0 15px #FFD700,
				0 0 30px #FFD700,
				0 0 45px #FF8C00;
		}
	}

	.content-area {
		background: linear-gradient(180deg,
			#1a1a2e 0%,
			#16213e 50%,
			#0f0f23 100%
		);
		border: 8px solid #FFD700;
		border-radius: 8px;
		padding: 3rem 2rem;
		display: flex;
		gap: 2rem;
		align-items: center;
		box-shadow:
			inset 0 0 50px rgba(255, 215, 0, 0.2),
			0 10px 40px rgba(0, 0, 0, 0.8);
		position: relative;
		overflow: hidden;
	}

	.content-area::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background:
			repeating-linear-gradient(
				0deg,
				transparent,
				transparent 2px,
				rgba(255, 215, 0, 0.03) 2px,
				rgba(255, 215, 0, 0.03) 4px
			);
		pointer-events: none;
	}

	.year-vertical {
		font-family: 'Bebas Neue', sans-serif;
		font-size: 5rem;
		font-weight: 400;
		writing-mode: vertical-rl;
		text-orientation: upright;
		letter-spacing: -0.1em;
		background: linear-gradient(180deg, #FFD700 0%, #FFA500 50%, #FF4500 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		text-shadow: none;
		filter: drop-shadow(3px 3px 0 rgba(255, 69, 0, 0.5))
		        drop-shadow(0 0 20px rgba(255, 215, 0, 0.6));
		animation: glow-pulse 2s ease-in-out infinite;
		flex-shrink: 0;
	}

	@keyframes glow-pulse {
		0%, 100% {
			filter: drop-shadow(3px 3px 0 rgba(255, 69, 0, 0.5))
			        drop-shadow(0 0 20px rgba(255, 215, 0, 0.6));
		}
		50% {
			filter: drop-shadow(3px 3px 0 rgba(255, 69, 0, 0.8))
			        drop-shadow(0 0 35px rgba(255, 215, 0, 0.9));
		}
	}

	.main-content {
		flex: 1;
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
		align-items: center;
	}

	.top-text {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.3rem;
	}

	.girl-scout,
	.cookie-sales {
		font-family: 'Archivo Black', sans-serif;
		letter-spacing: 0.15em;
		text-transform: uppercase;
		background: linear-gradient(180deg, #FFD700 0%, #FFA500 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		filter: drop-shadow(2px 2px 0 rgba(255, 69, 0, 0.4));
	}

	.girl-scout {
		font-size: 2.2rem;
	}

	.cookie-sales {
		font-size: 2.2rem;
	}

	.quiz-show {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0;
		animation: title-entrance 1s ease-out;
	}

	@keyframes title-entrance {
		0% {
			transform: scale(0.8) translateY(20px);
			opacity: 0;
		}
		100% {
			transform: scale(1) translateY(0);
			opacity: 1;
		}
	}

	.quiz,
	.show {
		font-family: 'Bebas Neue', sans-serif;
		font-weight: 400;
		text-transform: uppercase;
		line-height: 0.85;
		position: relative;
	}

	.quiz {
		font-size: 6rem;
		background: linear-gradient(180deg, #FFFFFF 0%, #FFD700 50%, #FFA500 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		letter-spacing: 0.05em;
		filter: drop-shadow(0 0 30px rgba(255, 215, 0, 0.8))
		        drop-shadow(4px 4px 0 rgba(220, 20, 60, 0.6));
		animation: shimmer 3s ease-in-out infinite;
	}

	.show {
		font-size: 8rem;
		background: linear-gradient(180deg,
			#FFFFFF 0%,
			#FFD700 20%,
			#FF8C00 40%,
			#FF4500 60%,
			#DC143C 80%,
			#8B0000 100%
		);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		letter-spacing: 0.1em;
		filter: drop-shadow(0 0 40px rgba(255, 69, 0, 0.9))
		        drop-shadow(5px 5px 0 rgba(0, 0, 0, 0.8))
		        drop-shadow(-2px -2px 0 rgba(255, 255, 255, 0.3));
		animation: shimmer 3s ease-in-out infinite 0.5s;
		margin-top: -0.5rem;
	}

	@keyframes shimmer {
		0%, 100% {
			filter: drop-shadow(0 0 30px rgba(255, 215, 0, 0.8))
			        drop-shadow(4px 4px 0 rgba(220, 20, 60, 0.6));
		}
		50% {
			filter: drop-shadow(0 0 50px rgba(255, 215, 0, 1))
			        drop-shadow(4px 4px 0 rgba(255, 69, 0, 0.9));
		}
	}

	/* Responsive adjustments */
	@media (max-width: 768px) {
		.marquee-frame {
			padding: 2rem 1.5rem;
		}

		.content-area {
			flex-direction: column;
			padding: 2rem 1rem;
			gap: 1.5rem;
		}

		.year-vertical {
			writing-mode: horizontal-tb;
			text-orientation: mixed;
			font-size: 3rem;
			letter-spacing: 0.2em;
		}

		.girl-scout,
		.cookie-sales {
			font-size: 1.4rem;
		}

		.quiz {
			font-size: 3.5rem;
		}

		.show {
			font-size: 5rem;
		}

		.light {
			width: 15px;
			height: 15px;
		}

		.corner {
			width: 30px;
			height: 30px;
		}
	}

	@media (max-width: 480px) {
		.marquee-frame {
			padding: 1.5rem 1rem;
		}

		.girl-scout,
		.cookie-sales {
			font-size: 1.1rem;
		}

		.quiz {
			font-size: 2.5rem;
		}

		.show {
			font-size: 3.5rem;
		}

		.year-vertical {
			font-size: 2rem;
		}

		.light {
			width: 12px;
			height: 12px;
		}
	}
</style>
