---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<div class="profile">
				<div class="photo-placeholder">
					<!-- Add your daughter's photo here -->
					<p>Photo coming soon!</p>
				</div>
				<div class="bio">
					<h1>Welcome to Wini's Website!</h1>
					<p>
						<!-- Add information about your daughter here -->
						Hi! I'm Wini and I'm 9 years old. Welcome to my website!
					</p>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>
<style>
	.profile {
		max-width: 800px;
		margin: 0 auto;
		padding: 2rem;
	}

	.photo-placeholder {
		width: 300px;
		height: 300px;
		margin: 2rem auto;
		background: var(--star-green);
		border: 3px solid var(--forest-green);
		border-radius: 10px;
		display: flex;
		align-items: center;
		justify-content: center;
		color: var(--forest-green);
		font-weight: bold;
	}

	.bio {
		text-align: center;
		margin-top: 2rem;
	}

	.bio h1 {
		font-size: 2rem;
		margin-bottom: 1rem;
	}

	.bio p {
		font-size: 1.1rem;
		line-height: 1.6;
	}
</style>
